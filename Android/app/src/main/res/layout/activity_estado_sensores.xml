<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadoSensoresActivity">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="497dp"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/titleEstadoSistema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:text="Estado de las luces"
                android:textSize="22sp" />
        </TableRow>

        <Switch
            android:id="@+id/switchReposo"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Estado Reposo"
            android:textSize="18sp" />
        <Switch
            android:id="@+id/switchSensores"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:text="Estado Sensores"
            android:textSize="18sp"/>
        <Switch
            android:id="@+id/switchFollaje"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Estado Follaje"
            android:textSize="18sp"/>
        <Switch
            android:id="@+id/switchTallo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="Estado Tallo"
            android:textSize="18sp"/>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>